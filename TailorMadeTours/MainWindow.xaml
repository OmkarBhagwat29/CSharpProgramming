<Window x:Class="TailorMadeTours.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TailorMadeTours"
        xmlns:views="clr-namespace:TailorMadeTours.UserControls"
        mc:Ignorable="d"
        Title="Tailor-made Tours"
        Height="700"
        Width="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        FontSize="18">
  <StackPanel HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
    <TextBlock TextWrapping="Wrap"
               Text="Tailor-made Tours - Chicago"
               FontWeight="Bold"
               FontSize="24" />
    <TabControl MinHeight="680"
                SelectionChanged="TabControl_SelectionChanged">
      <TabItem Header="Tour Stops">
        <views:TourStopsView />
      </TabItem>
      <TabItem Header="Details">
        <views:DetailView />
      </TabItem>
      <TabItem Header="Weekly Calender">
        <Grid Background="Orange" />
      </TabItem>
    </TabControl>
  </StackPanel>
</Window>
